{
  "name": "kafka-ecommerce",
  "version": "1.0.0",
  "description": "Real-time e-commerce data streaming with Apache Kafka",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start:producer": "ts-node src/producer.ts",
    "start:consumer": "ts-node src/consumer.ts",
    "start:server": "ts-node src/server.ts",
    "run:agent": "ts-node src/runAgent.ts",
    "dev": "concurrently \"npm run start:producer\" \"npm run start:consumer\" \"npm run start:server\"",
    "test": "jest"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/socket.io": "^3.0.1",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "kafkajs": "^2.2.4",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "recharts": "^3.3.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/node-fetch": "^2.6.13",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
